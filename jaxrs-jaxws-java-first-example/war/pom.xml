<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>
	<groupId>com.talend.sf.examples.jaxrs-jaxws-java-first</groupId>
	<artifactId>jaxrs-jaxws-java-first-war</artifactId>
	<name>JAX-RS JAX-WS Java First Example War</name>
	<packaging>war</packaging>

	<parent>
		<groupId>com.talend.sf.examples.jaxrs-jaxws-java-first</groupId>
		<artifactId>jaxrs-jaxws-java-first-example</artifactId>
		<version>1.0</version>
		<relativePath>..</relativePath>
	</parent>

	<dependencies>
		<dependency>
			<groupId>com.talend.sf.examples.jaxrs-jaxws-java-first</groupId>
			<artifactId>jaxrs-jaxws-java-first-service</artifactId>
			<version>1.0</version>
		</dependency>

	</dependencies>

	<build>
		<!-- Name of the generated WAR file -->
		<finalName>services</finalName>
		<plugins>
			<plugin>
				<groupId>org.mortbay.jetty</groupId>
				<artifactId>maven-jetty-plugin</artifactId>
				<version>6.1.15</version>
				<configuration>
					<contextPath>/${project.build.finalName}</contextPath>
					<systemProperties>
						<systemProperty>
							<name>jetty.port</name>
							<value>8000</value>
						</systemProperty>
					</systemProperties>
				</configuration>
			</plugin>

			<!--use mvn tomcat:deploy or mvn tomcat:undeploy -->
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>tomcat-maven-plugin</artifactId>
				<version>1.0-beta-1</version>
				<configuration>
					<server>myTomcat</server>
					<path>/${project.build.finalName}</path>
					<!--url>Place URL if different from http://localhost:8080/manager</url -->
				</configuration>
			</plugin>
		</plugins>


	</build>
	<properties>
		<jetty.port>8000</jetty.port>
	</properties>
</project>

